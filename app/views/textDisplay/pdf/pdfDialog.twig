{% macro toggleButton(id, label, active) %}
<label class="btn btn-default {{ active ? 'active' }}" style="text-align: left;">
    <input type="checkbox" name="id" {{ active ? 'checked' }}><span class="glyphicon glyphicon-check"></span><span class="glyphicon glyphicon-unchecked"></span> {{ label }}
</label>
{% endmacro %}
{% import _self as macros %}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Bezár</span></button>
    <h4 class="modal-title" id="pdfModalLabel">PDF-készítés</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-7">
            <h4>Előnézet</h4>
            Ide töltjük ajax-szal a preview-t a {{ refString }}-hez
        </div>
        <div class="col-md-5">
            <div class="btn-group-vertical" data-toggle="buttons">
                {{ macros.toggleButton('headings', 'Címsorok', true) }}
                {{ macros.toggleButton('refs', 'Hivatkozások', false) }}
                {{ macros.toggleButton('nums', 'Versszámozás', false) }}
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Bezárás</button>
</div>
