{% extends 'layout' %}

{% block meta %}
    <link rel="canonical" href="{{ url('/' ~ canonicalUrl ) }}" />

    <meta property="og:url" content="{{ url('/' ~ canonicalUrl ) }}">
    <meta property="og:title" content="{{ metaTitle }}">
    <meta property="og:description" content="{{ teaser }}">
{% endblock %}

{% block content %}
    <div class="pull-right panel panel-default">
        <div class="panel-body" class="share">
            {% include 'textDisplay.share' with { 'canonicalUrl' : canonicalUrl, 'teaser' : teaser } %}
        </div>
    </div>
    {% for verseContainer in verseContainers %}
        <div>
            {% include 'textDisplay.breadcrumb' with {'book': verseContainer.book, 'bookRef': verseContainer.bookRef } %}
        </div>
        <div>
            <p>
             {% include 'textDisplay.parsedVerseContainer' with { 'verseContainer' : verseContainer, 'translation' : translation} %}
            </p>
            <p>
                {% for otherTranslation in translations %}
                    {% if otherTranslation.id != translation.id %}
                        <a class="btn btn-xs btn-default" href="/{{ otherTranslation.abbrev }}/{{ verseContainer.bookRef.toString() }}">{{ otherTranslation.abbrev }}</a>
                    {% else %}
                        <a class="btn btn-xs btn-primary disabled">{{ otherTranslation.abbrev }}</a>
                    {% endif %}
                {% endfor %}
            </p>
            <p>
                {% if chapterLinks.prevLink %}
                    <a href="/{{ chapterLinks.prevLink }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Előző fejezet</a>
                {% endif %}
                {% if chapterLinks.nextLink %}
                    <a href="/{{ chapterLinks.nextLink }}" class="btn btn-default">Következő fejezet <span class="glyphicon glyphicon-chevron-right"></span></a>
                {% endif %}

        </div>
        <hr>
    {% endfor %}
{% endblock %}