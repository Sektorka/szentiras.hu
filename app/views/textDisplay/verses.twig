{% extends 'layout' %}

{% block content %}
    {% for verseContainer in verseContainers %}
        {% include 'textDisplay.breadcrumb' with {'book': verseContainer.book} %}
        {% for verse in verseContainer.verses %}
            {% if verse.type == 'text' %}
                <sup>{{ verse.numv }}</sup>
                {{ verse.text }}
            {% endif %}
        {% endfor %}
    {% endfor %}
{% endblock %}