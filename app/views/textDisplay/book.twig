{% extends 'layout' %}

{% set pageTitle %}
{{ book.name }} | {{ translation.name }} | Szentírás
{% endset %}

{% block content %}

    {% include 'textDisplay.breadcrumb' %}

    <p>
        {% for otherTranslation in translations %}
            {% if otherTranslation.id != translation.id %}
                <a class="btn btn-default btn-xs" href="/{{ otherTranslation.abbrev }}/{{ book.abbrev }}">{{ otherTranslation.abbrev }}</a>
            {% endif %}
        {% endfor %}
    </p>


    {% for chapter, verses in groupedVerses %}
        <h4><a href="/{{ translation.abbrev  }}/{{ book.abbrev }}{{ chapter }}">{{ chapter }}. fejezet</a></h4>

        {% for num in '1'..'2' %}
            <sup>{{ verses[num].numv }}</sup>{{ verses[num].verse|raw }}
        {% endfor %}
        <a href='/{{ translation.abbrev }}/{{ book.abbrev }}{{ chapter}}' class='link'>&gt;&gt;</a><br>
        <br />
    {% endfor %}

    {% include 'bookAbbrevList' %}

{% endblock %}