<table border='0' cellpadding='0' cellspacing='0' width='750'>
    {% for item in items %}
        {% if item == 'pause' %}
            <tr><td style='height:15px'></tr>
        {% elseif item is not iterable %}
            <tr><td class='menu' >{{ item|raw }}</td></tr>
        {% else %}
            <tr><td style='height:3px'></tr>
            <tr>
                <td background='/img/vmenucolorbg.gif' width='140' align='left' class='menu'>
                    <a href="{{ item[1] }}" class="menulink">{{ item[0] }}</a>
                </td>
            </tr>         
        {% endif %}
    {% endfor %}
</table>
