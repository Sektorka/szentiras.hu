{% if books|length > 0 %}
<blockquote>
    <p class='kicsi' align='center'>
        {% for b in books %}
            {% if (b == book) %}
                <b>{{b.abbrev}}</b>
            {% else %}
                <a href="/{{ translation.abbrev }}/{{b.abbrev}}" class='minilink'>{{b.abbrev}}</a>
            {% endif %}
            {% if (not loop.last) %} - {% endif %}
        {% endfor %}
    </p>
</blockquote>
{% endif %}
