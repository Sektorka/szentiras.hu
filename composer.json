{
    "name": "szentiras.hu/szentiras-webapp",
    "description": "Szentiras.hu web application",
    "license": "MIT",
    "require": {
        "laravel/framework": "4.1.*",
        "barryvdh/laravel-twigbridge": "dev-master",
        "twig/extensions": "1.0.*",
        "doctrine/dbal": "2.3.*",
        "barryvdh/laravel-ide-helper": "1.*",
        "barryvdh/laravel-cors": "dev-master",
        "scalia/sphinxsearch": "dev-master",
        "gigablah/sphinxphp": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.9.0"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "psr-4": {
            "SzentirasHu\\Controllers\\": "app/controllers",
            "SzentirasHu\\Lib\\": "app/lib",
            "SzentirasHu\\Models\\": "app/models",
            "SzentirasHu\\Views\\": "app/views"
        }

    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
