{
    "name": "szentiras.hu/szentiras-webapp",
    "description": "Szentiras.hu web application",
    "license": "MIT",
    "require": {
        "laravel/framework": "4.2.*",
        "barryvdh/laravel-twigbridge": "0.3.3",
        "twig/extensions": "1.0.*",
        "doctrine/dbal": "2.3.*",
        "barryvdh/laravel-cors": "0.2.x",
        "gigablah/sphinxphp": "2.0.*",
        "barryvdh/laravel-debugbar": "1.*",
		"phpoffice/phpexcel": "1.*",
        "endroid/qrcode": "1.2.4",
        "imagine/imagine": "~0.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.9.0",
        "barryvdh/laravel-ide-helper": "1.11.1"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php",
            "app/tests/lib"
        ],
        "psr-4": {
            "SzentirasHu\\Controllers\\": "app/controllers",
            "SzentirasHu\\Lib\\": "app/lib",
            "SzentirasHu\\Models\\": "app/models",
            "SzentirasHu\\Views\\": "app/views"
        }

    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate --env=dev",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
